# ============================================================================
# PIXERA - Development Environment Configuration
# ============================================================================

# ── Django Core ──────────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# ── Localization ─────────────────────────────────────────────────────────────
LANGUAGE_CODE=ru
TIME_ZONE=UTC
LANGUAGE_COOKIE_NAME=django_language
LANGUAGE_COOKIE_AGE=157680000
LANGUAGE_COOKIE_SAMESITE=Lax

# ── Database (SQLite в dev, MySQL в production) ──────────────────────────────
# В development используется SQLite автоматически
# Для production настройте MySQL:
# MYSQL_DATABASE=pixera
# MYSQL_USER=pixera_user
# MYSQL_PASSWORD=strong_password

# ── Celery (опционально для dev) ─────────────────────────────────────────────
# Для локальной разработки можно отключить (задачи выполнятся синхронно)
USE_CELERY=False
# Для работы с Celery установите Redis и раскомментируйте:
# USE_CELERY=True
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ── AI API Keys ──────────────────────────────────────────────────────────────
# Runware AI (https://runware.ai)
RUNWARE_API_KEY=your-runware-api-key
RUNWARE_API_URL=https://api.runware.ai/v1
RUNWARE_DEFAULT_MODEL=runware:101@1
RUNWARE_WEBHOOK_TOKEN=dev_webhook_token

# Replicate (опционально, https://replicate.com)
# REPLICATE_API_KEY=your-replicate-api-key

# Runway ML (опционально, https://runwayml.com)
# RUNWAY_API_KEY=your-runway-api-key

# ── OAuth провайдеры (django-allauth) ────────────────────────────────────────
# Google Cloud Console → Credentials → Create OAuth 2.0 Client ID
# Authorized redirect URIs (добавьте все, что используете):
# - http://127.0.0.1:8000/accounts/google/login/callback/
# - http://localhost:8000/accounts/google/login/callback/
# - https://<NGROK_DOMAIN>/accounts/google/login/callback/
# - https(s)://<YOUR_DOMAIN>/accounts/google/login/callback/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth (optional)
# Meta for Developers → Settings → Basic → OAuth settings
# Valid OAuth Redirect URIs (включите Strict Mode):
# - http://127.0.0.1:8000/accounts/facebook/login/callback/
# - http://localhost:8000/accounts/facebook/login/callback/
# - https://<NGROK_DOMAIN>/accounts/facebook/login/callback/
# - https(s)://<YOUR_DOMAIN>/accounts/facebook/login/callback/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Discord OAuth (optional)
# Discord Developer Portal → Applications → OAuth2 → Redirects
# Redirects:
# - http://127.0.0.1:8000/accounts/discord/login/callback/
# - http://localhost:8000/accounts/discord/login/callback/
# - https://<NGROK_DOMAIN>/accounts/discord/login/callback/
# - https(s)://<YOUR_DOMAIN>/accounts/discord/login/callback/
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Guest settings
GUEST_INITIAL_TOKENS=30
GUEST_INITIAL_JOBS=3
TOKEN_COST_PER_GEN=10

# Feature flags
ENABLE_DEVICE_FP=True
ENABLE_ANTIABUSE=True
FREE_FOR_STAFF=True
AGE_GATE_ENABLED=False

# Public base URL (optional, для генерации абсолютных ссылок/вебхуков)
# Пример для локалки: http://127.0.0.1:8000
# Пример для prod: https://your-domain.com
PUBLIC_BASE_URL=

# ngrok (for dev)
# Укажите домен ngrok без схемы, например: cool-app-1234.ngrok-free.app
NGROK_DOMAIN=

# Support
SUPPORT_TELEGRAM_URL=https://t.me/your_support

# DeepL Translate API (for prompt translation)
DEEPL_API_KEY=your-deepl-api-key-here

# X.AI Grok API
# Place your key here (do NOT commit your real key to git):
GROK_API_KEY=your-xai-api-key
