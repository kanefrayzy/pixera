# Django
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Database (MySQL for production)
MYSQL_DATABASE=ai_gallery_db
MYSQL_USER=ai_gallery_user
MYSQL_PASSWORD=your-password-here
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306

# Celery (optional)
USE_CELERY=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Runware API
RUNWARE_API_KEY=your-runware-api-key
RUNWARE_API_URL=https://api.runware.ai/v1
RUNWARE_DEFAULT_MODEL=runware:101@1
RUNWARE_WEBHOOK_TOKEN=your-webhook-token

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Guest settings
GUEST_INITIAL_TOKENS=30
GUEST_INITIAL_JOBS=3
TOKEN_COST_PER_GEN=10

# Feature flags
ENABLE_DEVICE_FP=True
ENABLE_ANTIABUSE=True
FREE_FOR_STAFF=True

# ngrok (for dev)
NGROK_DOMAIN=

# Support
SUPPORT_TELEGRAM_URL=https://t.me/your_support