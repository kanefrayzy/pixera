# ============================================================================
# Pixera Nginx Configuration
# ============================================================================

# Блокировка ботов до запуска production
map $http_user_agent $limit_bots {
    default 0;
    ~*(google|bot|crawl|spider|slurp|baidu|yandex|bing) 1;
}

server {
    listen 80;
    server_name pixera.net www.pixera.net;
    client_max_body_size 100M;

    # ========================================================================
    # ЗАЩИТА ОТ ИНДЕКСАЦИИ ДО PRODUCTION
    # ========================================================================

    # Блокировка всех ботов и поисковых систем
    if ($limit_bots = 1) {
        return 403;
    }

    # Добавляем заголовки блокировки индексации
    add_header X-Robots-Tag "noindex, nofollow, noarchive, nosnippet" always;

    # ========================================================================
    # ОСНОВНАЯ КОНФИГУРАЦИЯ
    # ========================================================================

    # Robots.txt с блокировкой
    location = /robots.txt {
        proxy_pass http://web:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        add_header X-Robots-Tag "noindex, nofollow" always;
    }

    # Статика
    location /static/ {
        alias /app/staticfiles/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header X-Robots-Tag "noindex, nofollow" always;
    }

    # Медиа
    location /media/ {
        alias /app/media/;
        expires 30d;
        add_header Cache-Control "public";
        add_header X-Robots-Tag "noindex, nofollow" always;
    }

    # Основное приложение
    location / {
        proxy_pass http://web:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Health check
    location = /health/ {
        proxy_pass http://web:8000;
        access_log off;
    }
}
