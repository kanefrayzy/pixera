# ============================================================================
# PIXERA - Production Environment Configuration
# ============================================================================

# ── Django Core ──────────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=change-this-to-random-50-char-string-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ── Database (MySQL) ─────────────────────────────────────────────────────────
MYSQL_DATABASE=pixera
MYSQL_USER=pixera_user
MYSQL_PASSWORD=strong_password_here
MYSQL_ROOT_PASSWORD=strong_root_password_here
MYSQL_HOST=db
MYSQL_PORT=3306

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ── Email (SMTP) ─────────────────────────────────────────────────────────────
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Pixera <no-reply@pixera.com>

# ── Localization ─────────────────────────────────────────────────────────────
LANGUAGE_CODE=ru
TIME_ZONE=UTC
LANGUAGE_COOKIE_NAME=django_language
LANGUAGE_COOKIE_AGE=157680000
LANGUAGE_COOKIE_SAMESITE=Lax

# ── Feature Flags ────────────────────────────────────────────────────────────
FREE_FOR_STAFF=False
ENABLE_DEVICE_FP=True
ENABLE_ANTIABUSE=True
ENABLE_DRF_THROTTLE=True
AGE_GATE_ENABLED=False
ALLOW_FREE_LOCAL_VIDEO=False

# ── Authentication (django-allauth) ──────────────────────────────────────────
ACCOUNT_EMAIL_VERIFICATION=mandatory
ACCOUNT_RATE_LIMIT_LOGIN_FAILED=5/5m

# Google OAuth (получить на https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (получить на https://developers.facebook.com)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Discord OAuth (получить на https://discord.com/developers)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# ── AI API Keys ──────────────────────────────────────────────────────────────
# Runware AI (https://runware.ai)
RUNWARE_API_KEY=your-runware-api-key

# Replicate (https://replicate.com)
REPLICATE_API_KEY=your-replicate-api-key

# Runway ML (https://runwayml.com)
RUNWAY_API_KEY=your-runway-api-key

# ── Payment (Stripe/PayPal/Cryptomus) ────────────────────────────────────────
# Stripe (https://stripe.com)
STRIPE_PUBLIC_KEY=pk_live_xxx
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ── Security ─────────────────────────────────────────────────────────────────
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ── Static & Media ───────────────────────────────────────────────────────────
# Для production рекомендуется использовать S3/CDN
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=pixera-media
# AWS_S3_REGION_NAME=us-east-1

# ── Logging ──────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO

# ── Site ─────────────────────────────────────────────────────────────────────
SITE_ID=1
