# ============================================================================
# PIXERA - Production Environment Configuration
# ============================================================================

# ── Django Core ──────────────────────────────────────────────────────────────
DJANGO_SECRET_KEY=change-this-to-random-50-char-string-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=pixera.net,www.pixera.net
CSRF_TRUSTED_ORIGINS=https://pixera.net,https://www.pixera.net

# ── Database (PostgreSQL) ────────────────────────────────────────────────────
POSTGRES_DB=pixera
POSTGRES_USER=pixera_user
POSTGRES_PASSWORD=strong_password_here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
USE_CELERY=True
CELERY_QUEUE_SUBMIT=runware_submit

# ── Email (SMTP) ─────────────────────────────────────────────────────────────
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Pixera <no-reply@pixera.com>

# ── Localization ─────────────────────────────────────────────────────────────
LANGUAGE_CODE=ru
TIME_ZONE=UTC
LANGUAGE_COOKIE_NAME=django_language
LANGUAGE_COOKIE_AGE=157680000
LANGUAGE_COOKIE_SAMESITE=Lax

# ── Feature Flags ────────────────────────────────────────────────────────────
FREE_FOR_STAFF=False
ENABLE_DEVICE_FP=True
ENABLE_ANTIABUSE=True
ENABLE_DRF_THROTTLE=True
AGE_GATE_ENABLED=False
ALLOW_FREE_LOCAL_VIDEO=False

# ── Authentication (django-allauth) ──────────────────────────────────────────
ACCOUNT_EMAIL_VERIFICATION=none
ACCOUNT_RATE_LIMIT_LOGIN_FAILED=5/5m

# Google OAuth (получить на https://console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth (получить на https://developers.facebook.com)
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Discord OAuth (получить на https://discord.com/developers)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# ── AI API Keys ──────────────────────────────────────────────────────────────
# Runware AI (https://runware.ai)
RUNWARE_API_URL=https://api.runware.ai/v1
RUNWARE_API_KEY=your-runware-api-key-here
RUNWARE_DEFAULT_MODEL=rundiffusion:130@100
RUNWARE_ALLOWED_MODELS=rundiffusion:130@100
RUNWARE_CHECK_NSFW=0
RUNWARE_FORCE_SYNC=1
RUNWARE_CONNECT_TIMEOUT=15
RUNWARE_READ_TIMEOUT=300
RUNWARE_DOWNLOAD_TIMEOUT=300

# DeepL Translate API
DEEPL_API_KEY=your-deepl-api-key-here

# X.AI Grok API (для генерации промптов)
GROK_API_KEY=your-grok-api-key-here

# ── Tokens/Pricing ───────────────────────────────────────────────────────────
TOKEN_COST_PER_GEN=10
TOKENS_PRICE_PER_GEN=10
GUEST_INITIAL_TOKENS=30
GUEST_INITIAL_JOBS=3

# ── Public URLs ──────────────────────────────────────────────────────────────
PUBLIC_BASE_URL=https://pixera.net
RUNWARE_WEBHOOK_TOKEN=production_webhook_token_change_me

# ── Security ─────────────────────────────────────────────────────────────────
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# ── Logging ──────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO

# ── Site ─────────────────────────────────────────────────────────────────────
SITE_ID=1
